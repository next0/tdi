{
  "compilerOptions": {
    "outDir": "build/es5",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
